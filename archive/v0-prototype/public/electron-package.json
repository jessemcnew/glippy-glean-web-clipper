{
  "name": "clips-reader-desktop",
  "version": "1.0.0",
  "description": "Beautiful desktop reading app for your saved clips",
  "main": "electron-main.js",
  "scripts": {
    "electron:dev": "electron .",
    "electron:build": "electron-builder"
  },
  "build": {
    "appId": "com.clips-reader.app",
    "productName": "Clips Reader",
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "icon.png"
    },
    "win": {
      "target": "nsis",
      "icon": "icon.png"
    },
    "linux": {
      "target": "AppImage",
      "category": "Office"
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  }
}
